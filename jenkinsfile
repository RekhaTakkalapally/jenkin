pipeline {
    agent any

    environment {
        IMAGE_NAME = "rekha719/myapp"
        IMAGE_TAG  = "latest"
    }

    stages {
        stage('Prepare Repository') {
            steps {
                script {
                    // If folder exists, pull latest changes; else clone
                    if (fileExists('jenkin')) {
                        dir('jenkin') {
                            withCredentials([usernamePassword(
                                credentialsId: 'github-credentials',
                                usernameVariable: 'GIT_USER',
                                passwordVariable: 'GIT_TOKEN'
                            )]) {
                                sh """
                                git config user.name "$GIT_USER"
                                git config user.password "$GIT_TOKEN"
                                git pull origin main
                                """
                            }
                        }
                    } else {
                        withCredentials([usernamePassword(
                            credentialsId: 'github-credentials',
                            usernameVariable: 'GIT_USER',
                            passwordVariable: 'GIT_TOKEN'
                        )]) {
                            sh """
                            git clone https://\$GIT_USER:\$GIT_TOKEN@github.com/RekhaTakkalapally/jenkin.git
                            """
                        }
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('jenkin') {
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'myapp',  // Docker Hub credentials
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    dir('jenkin') {
                        sh """
                        echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                        docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        docker logout
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
    }
}
